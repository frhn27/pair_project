<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Item-list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>

    <div class="container">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="/item">Elect Store</a>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            </div>
          </nav>

      <h1 style="text-align: center;">Gadget List</h1>
      
      <% if (name) { %>
        <div class="container bg-warning p-2 my-3">
          <%= name %> has been deleted
        </div>
      
        <% } %>
      
        <a class="btn btn-secondary" href="/item/add">Add Product</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Product Name</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(el => { %>         
            <tr>
              <td><%= el.id  %></td>
              <td><%= el.name  %></td>
              <td><img src="<%= el.imageUrl %>" class="img-thumbnail" alt="..."></td>
              <td><%= el.description  %></td>
              <td><%= formatRp(el.price)  %></td>
              <td> <a class="btn btn-danger" href="/item/<%= el.id %>/delete">Delete Product</a></td>
              <td> <a class="btn btn-info" href="/item/<%= el.id %>/edit">Edit Product Detail</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>